{
  "variables": {
          "aws_access_key":"",
          "aws_secret_key":"",
          "aws_access_token":""
  },
  "builders": [{
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "token": "{{user `aws_access_token`}}",
          "region": "us-west-2",
          "instance_type": "t2.medium",
          "ssh_username": "ec2-user",
          "source_ami": "ami-0e8c04af2729ff1bb",
          "ami_name": "ami-triaxlium-app {{timestamp}}"
  }],
  "provisioners": [
    {
      "destination": "/home/ec2-user/",
      "source": "files/gitpull.sh",
      "type": "file"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/setup.sh"
      ]
    }
  ]
}