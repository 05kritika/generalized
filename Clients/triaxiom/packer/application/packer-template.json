{
  "variables": {
          "aws_access_key":"",
          "aws_secret_key":"",
          "ftp_password":"",
          "region":  "",
          "instance_type": "",
          "source_ami": ""
  },
  "builders": [{
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "region": "{{user `region`}}",
          "instance_type": "{{user `instance_type`}}",
          "ssh_username": "ec2-user",
          "source_ami": "{{user `source_ami`}}",
          "ami_name": "ami-triaxlium-app {{timestamp}}"
  }],
  "provisioners": [
    {
      "destination": "/home/ec2-user/",
      "source": "files/gitpull.sh",
      "type": "file"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ftp_password={{user `ftp_password`}}"
      ],
      "scripts": [
        "scripts/setup.sh"
      ]
    }
  ]
}